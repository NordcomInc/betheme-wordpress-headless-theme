{
    "name": "nordcom/betheme-wordpress-headless-theme",
    "description": "Turn your Betheme WordPress site headless while keeping all the functionality",
    "type": "wordpress-theme",
    "license": "MIT",
    "authors": [
        {
            "name": "Nordcom Group Inc.",
            "email": "opensource@nordcom.io"
        },
        {
            "name": "Filiph Siitam SandstrÃ¶m",
            "email": "filiph@nordcom.io"
        }
    ],
    "suggest": {
        "nordcom/wp-graphql-bebuilder": "Integrates with BeBuilder."
    },
    "require-dev": {
        "automattic/vipwpcs": "^3.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "require": {
        "phpcompatibility/phpcompatibility-wp": "^2.1",
        "php": ">=8"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        },
        "platform": {
            "php": "8"
        },
        "process-timeout": 0,
        "optimize-autoloader": true
    },
    "archive": {
        "name": "betheme-wordpress-headless-theme",
        "exclude": [
            "/.*",
            "!.wordpress-org",
            "!vendor",
            "theme-build",
            "node_modules",
            "/composer.json",
            "/composer.lock",
            "/package.json",
            "/package-lock.json",
            "/phpcs.xml"
        ]
    }
}
